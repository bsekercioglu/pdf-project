generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(cuid())
  email        String     @unique
  passwordHash String
  name         String?
  createdAt    DateTime   @default(now())
  files        UserFile[]
}

model UserFile {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  filename     String   // depodaki dosya adı (uuid.pdf)
  originalName String   // kullanıcıya gösterilen ad (merged.pdf)
  fileType     String   // pdf, zip, txt
  storagePath  String   // userId/filename
  size         Int      @default(0)
  createdAt    DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
}
